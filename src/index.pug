    //- Mixin (html template for product lists
    mixin productList(products)
      each p in products
        .product
          .left
            .icon
              if p.icon
                img(src=p.icon)
          .right
            h4= p.title
            .badges
              if p.app.url
                a(href=p.app.url, target='_blank').app App
              if p.api.url
                a(href=p.api.url).api API
              if !p.app.url && !p.api.url
                | (coming soon)

